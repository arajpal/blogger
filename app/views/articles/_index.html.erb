<!-- <table id="articles" class="display responsive no-wrap"> -->
  <thead>
    <tr>
      <th>Title</th>
      <th>Blog</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Status</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <% if can? :update, article %>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <% end %>
        <td>
          <% if article.verfied %>
          Verified
          <% else %>
          Not Verified
          <%= link_to "Approve", verify_article_path(article), remote: true, class: "btn btn-success btn-sm" if can? :approve, article %>
          <% end %>
        </td>     
        <% if can? :destroy, article %>
          <td><%= link_to 'Delete', article_path(article), method: :delete, remote: true%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
<!-- </table> -->