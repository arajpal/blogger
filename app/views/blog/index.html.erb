<h1>List of blogs</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Blog</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, remote: true%></td>
      <td><%= button_to 'approve' %></td>
      <td><%= button_to 'decline' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Blog', new_article_path %>